<table class="table mission-historique-table">
	<tr>
		<th>N° Mission</th>
		<th>Description</th>
		<th>Points gagnés</th>
		<th>Date</th>
	</tr>
	{% for mission in userMissions(app.user) %}
	<tr>
		<td>{{ mission.id }}</td>
		<td>{{ mission.description }}</td>
		<td><span class="badge badge-warning badge-sm">{{ mission.amount }}</span></td>
		<td>{{ mission.created|date('d/m/Y') }}</td>
	</tr>
	{% else %}
	<tr>
		<td colspan="5">Aucune mission effectuées...</td>
	</tr>
	{% endfor %}
</table>