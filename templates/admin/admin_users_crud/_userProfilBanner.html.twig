<div class="row">
    <div class="col-lg-12">
        <div class="profile card card-body px-3 pt-3 pb-0">
            <div class="profile-head">
                <div class="photo-content bg-light">
                    <div class="cover-photo"></div>
                </div>
                <div class="profile-info">
                    <div class="profile-photo">
                        {% if userAvatar(user) %}
                        <img src="{{ vich_uploader_asset(userAvatar(user)) | imagine_filter('large_avatar') }}" class="rounded-circle" alt="{{ user.pseudo }}"/>
                        {% else %}
                        <img src="{{ asset('img/user.jpg') | imagine_filter('large_avatar') }}" class="rounded-circle">
                        {% endif %}
                    </div>
                    <div class="profile-details">
                        <div class="profile-name px-3 pt-2">
                            <h4 class="text-primary mb-0">{{ user.pseudo }}</h4>
                            <p>Membre depuis le {{ user.created|date('d/m/Y') }}</p>
                        </div>
                        <div class="profile-email px-2 pt-2">
                            <h4 class="text-muted mb-0">{{ user.email }}</h4>
                            <p>Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>