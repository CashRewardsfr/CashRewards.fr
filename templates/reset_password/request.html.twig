{% extends 'auth.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block textBloc %}
    <div class="bloc-text">
        <h1 class="green-color h2 wow fadeInRight" data-wow-duration="3s" data-wow-delay="0.3s" data-wow-offset="0">
            Réinitialisez votre mot de passe
        </h1>
    </div>
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm, {'attr': {'class': 'auth-form mt-3'}}) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
