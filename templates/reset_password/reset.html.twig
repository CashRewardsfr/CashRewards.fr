{% extends 'auth.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block textBloc %}
    <div class="bloc-text">
        <h1 class="green-color h2 wow fadeInRight" data-wow-duration="3s" data-wow-delay="0.3s" data-wow-offset="0">
            Réinitialisez votre mot de passe
        </h1>
    </div>
{% endblock %}

{% block body %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(resetForm, {'attr': {'class': 'auth-form mt-3'}}) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(resetForm) }}
{% endblock %}
